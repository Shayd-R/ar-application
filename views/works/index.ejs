<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <div class="container mt-4">
    <%- include('../partials/messages') %>
    
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1><i class="fas fa-images me-2"></i>Mis Obras</h1>
      <a href="/works/new" class="btn btn-success">
        <i class="fas fa-plus-circle me-1"></i> Nueva Obra
      </a>
    </div>
    
    <% if (works.length === 0) { %>
      <div class="alert alert-info">
        <p class="mb-0">Aún no has subido ninguna obra. ¡Comienza ahora!</p>
      </div>
      <div class="text-center mt-4">
        <a href="/works/new" class="btn btn-primary btn-lg">
          <i class="fas fa-plus-circle me-1"></i> Subir mi primera obra
        </a>
      </div>
    <% } else { %>
      <div class="row" id="works-grid">
        <% works.forEach(work => { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <div class="card-status-badge 
                <% if (work.status_work === 'activa') { %>
                  bg-success
                <% } else if (work.status_work === 'inactiva') { %>
                  bg-danger
                <% } %>
              ">
                <%= work.status_work %>
              </div>
              
              <div class="card-body">
                <h5 class="card-title"><%= work.title_work || 'Sin título' %></h5>
                <p class="card-text text-muted">
                  <small>Creado el: <%= new Date(work.created_at_work).toLocaleDateString() %></small>
                </p>
                <p class="card-text">
                  <%= work.description_work ? (work.description_work.length > 100 ? work.description_work.substring(0, 100) + '...' : work.description_work) : 'Sin descripción' %>
                </p>
                
                <div class="status-indicators">
                  <% if (work.status_work === 'activa') { %>
                    <span class="status-icon active" data-bs-toggle="tooltip" title="Activa">
                      <i class="fas fa-check-circle"></i>
                    </span>
                  <% } else if (work.status_work === 'inactiva') { %>
                    <span class="status-icon inactive" data-bs-toggle="tooltip" title="Inactiva">
                      <i class="fas fa-times-circle"></i>
                    </span>
                  <% } %>
                </div>
              </div>
              
              <div class="card-footer bg-transparent">
                <div class="btn-group w-100">
                  <a href="/works/<%= work.id_work %>" class="btn btn-outline-primary">
                    <i class="fas fa-eye me-1"></i> Ver
                  </a>
                  
                  <a href="/works/<%= work.id_work %>/edit" class="btn btn-outline-secondary">
                    <i class="fas fa-edit me-1"></i> Editar
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
  
  <%- include('../partials/footer') %>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
  <script>
    // Activar tooltips
    document.addEventListener('DOMContentLoaded', function() {
      var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
      tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
      });
    });
  </script>
</body>
</html> 