<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <div class="container mt-4">
    <%- include('../partials/messages') %>
    
    <div class="row">
      <div class="col-md-12 mb-4">
        <h1><i class="fas fa-images me-2"></i>Gestión de Obras</h1>
        <p class="text-muted">
          Total de obras: <span class="badge bg-primary"><%= works?.length || 0 %></span>
        </p>
      </div>
    </div>
    
    <div class="card shadow-sm">
      <div class="card-header bg-light">
        <h5 class="card-title mb-0"><i class="fas fa-table me-2"></i>Listado de Obras</h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="table-dark">
              <tr>
                <th>ID</th>
                <th>Imagen</th>
                <th>Título</th>
                <th>Artista</th>
                <th>Categoría</th>
                <th>Estado</th>
                <th>Fecha de Creación</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% if (works && works.length > 0) { %>
                <% works.forEach(work => { %>
                  <tr>
                    <td>
                      <span class="badge bg-secondary">#<%= work.id_work %></span>
                    </td>
                    <td>
                      <% if (work.content_type === 'video') { %>
                        <div class="position-relative">
                          <video src="<%= work.url_image_work %>" class="img-thumbnail" style="width: 80px; height: 60px; object-fit: cover;" muted></video>
                          <span class="position-absolute top-0 end-0 badge bg-danger" style="font-size: 0.6rem;"><i class="fas fa-video"></i></span>
                        </div>
                      <% } else { %>
                        <img src="<%= work.url_image_work %>" alt="<%= work.title_work %>" class="img-thumbnail" style="width: 80px; height: 60px; object-fit: cover;">
                      <% } %>
                    </td>
                    <td><%= work.title_work %></td>
                    <td><%= work.name_user %></td>
                    <td><%= work.name_category || 'Sin categoría' %></td>
                    <td>
                      <% if (work.status_work === 'activa') { %>
                        <span class="badge bg-success">Activa</span>
                      <% } else if (work.status_work === 'inactiva') { %>
                        <span class="badge bg-warning text-dark">Inactiva</span>
                      <% } else if (work.status_work === 'pendiente por compilar') { %>
                        <span class="badge bg-info">Pendiente por compilar</span>
                      <% } else { %>
                        <span class="badge bg-secondary">Pendiente</span>
                      <% } %>
                    </td>
                    <td><%= new Date(work.created_at_work).toLocaleDateString('es-ES') %></td>
                    <td>
                      <div class="btn-group">
                        <a href="/v/<%= work.share_token %>/ar" class="btn btn-danger btn-sm" title="Ver en AR" target="_blank">
                          <i class="fas fa-vr-cardboard"></i>
                        </a>
                        <a href="/v/<%= work.share_token %>" class="btn btn-info btn-sm" title="Ver" target="_blank">
                          <i class="fas fa-eye"></i>
                        </a>
                        <form action="/admin/works/<%= work.id_work %>/status" method="POST" class="d-inline">
                          <input type="hidden" name="workId" value="<%= work.id_work %>">
                          <% if (work.status_work === 'activa') { %>
                            <input type="hidden" name="status" value="inactiva">
                            <button type="submit" class="btn btn-warning btn-sm" title="Desactivar">
                              <i class="fas fa-ban"></i>
                            </button>
                          <% } else { %>
                            <input type="hidden" name="status" value="activa">
                            <button type="submit" class="btn btn-success btn-sm" title="Activar">
                              <i class="fas fa-check"></i>
                            </button>
                          <% } %>
                        </form>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="8" class="text-center">No hay obras registradas</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
  <%- include('../partials/footer') %>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html> 