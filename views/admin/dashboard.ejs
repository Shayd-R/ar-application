<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <div class="container mt-4">
    <%- include('../partials/messages') %>
    
    <div class="row">
      <div class="col-md-12 mb-4">
        <h1><i class="fas fa-chart-line me-2"></i>Panel de Administración</h1>
      </div>
    </div>
    
    <div class="row">
      <!-- Tarjeta de usuarios totales -->
      <div class="col-md-6 mb-4">
        <div class="card bg-primary text-white h-100">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="card-title">Usuarios Totales</h5>
                <h2 class="mb-0"><%= totalUsers %></h2>
              </div>
              <div>
                <i class="fas fa-users fa-3x"></i>
              </div>
            </div>
          </div>
          <div class="card-footer d-flex align-items-center justify-content-between">
            <a href="/admin/users" class="small text-white stretched-link">Ver Detalles</a>
            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
          </div>
        </div>
      </div>
      
      <!-- Tarjeta de obras totales -->
      <div class="col-md-6 mb-4">
        <div class="card bg-success text-white h-100">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="card-title">Obras Totales</h5>
                <h2 class="mb-0"><%= totalWorks %></h2>
              </div>
              <div>
                <i class="fas fa-images fa-3x"></i>
              </div>
            </div>
          </div>
          <div class="card-footer d-flex align-items-center justify-content-between">
            <a href="/admin/works" class="small text-white stretched-link">Ver Detalles</a>
            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <!-- Tabla de obras recientes -->
      <div class="col-md-6">
        <div class="card mb-4">
          <div class="card-header">
            <i class="fas fa-images me-1"></i>
            Obras Recientes
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-borderless table-hover">
                <thead class="table-light">
                  <tr>
                    <th>Título</th>
                    <th>Artista</th>
                    <th>Fecha</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (recentWorks && recentWorks.length > 0) { %>
                    <% recentWorks.forEach(work => { %>
                      <tr>
                        <td><%= work.title_work %></td>
                        <td><%= work.name_user %></td>
                        <td>
                          <%= new Date(work.created_at_work).toLocaleDateString('es-ES') %>
                        </td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="3" class="text-center">No hay obras recientes</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Tabla de usuarios recientes -->
      <div class="col-md-6">
        <div class="card mb-4">
          <div class="card-header">
            <i class="fas fa-users me-1"></i>
            Usuarios Recientes
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-borderless table-hover">
                <thead class="table-light">
                  <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Fecha</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (recentUsers && recentUsers.length > 0) { %>
                    <% recentUsers.forEach(user => { %>
                      <tr>
                        <td><%= user.name_user %></td>
                        <td><%= user.email_user %></td>
                        <td>
                          <%= new Date(user.created_at_user).toLocaleDateString('es-ES') %>
                        </td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="3" class="text-center">No hay usuarios recientes</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <%- include('../partials/footer') %>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html> 